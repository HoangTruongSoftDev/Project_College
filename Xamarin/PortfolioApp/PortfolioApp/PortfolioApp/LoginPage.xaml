<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PortfolioApp.LoginPage">
    <ContentPage.Content>

        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
            <Label  Margin="0,0,0,40" FontSize="Large" FontAttributes="Bold" TextColor="CornflowerBlue" Text="Hoang Truong's Programming Portfolio"></Label>
            <Frame HorizontalOptions="Center" BorderColor="Black" CornerRadius="5" Padding="5">
                <Entry x:Name="usernameEntry" WidthRequest="200" Placeholder="enter username"></Entry>
            </Frame>
            <Frame HorizontalOptions="Center" WidthRequest="200" BorderColor="Black" CornerRadius="5" Padding="5">
                <Entry x:Name="passwordEntry" Placeholder="enter password"></Entry>
            </Frame>
            <Label x:Name="labelErrorMessage" IsVisible="false"></Label>
            <Button TextColor="White" FontAttributes="Bold" BackgroundColor="CornflowerBlue" CornerRadius="50" Margin="0,40,0,0" Text="Login" Clicked="ButtonLogin_Clicked"></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>